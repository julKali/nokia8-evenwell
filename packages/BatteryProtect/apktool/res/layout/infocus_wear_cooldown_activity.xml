<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/WearLayout_DialogStyle_Infocus"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_gravity="top" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="36.0dip">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <TextView android:id="@id/navi_watch_date" style="@style/WearLayout_DateTimeLeftStyle_Infocus" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
            <TextView android:id="@id/navi_watch_time" style="@style/WearLayout_DateTimeRightStyle_Infocus" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/WearLayout_TitleStyle_HasDataTime_Infocus">
        <ImageView android:src="@drawable/infocus_wear_batteryprotect_cooldown" style="@style/WearLayout_TitleImage_Infocus" />
        <TextView android:id="@id/cooldown_main_text" android:text="@string/fih_battery_protect_cooldown_title_wear" style="@style/WearLayout_DialogTitle_Infocus" />
    </LinearLayout>
    <ScrollView android:layout_width="fill_parent" android:layout_height="0.0dip" android:layout_weight="1.0" style="@style/WearLayout_DialogContent_New_Infocus">
        <TextView android:id="@id/cooldown_dec_text" android:text="@string/fih_battery_protect_cooldown_text_wear" style="@style/WearLayout_DialogContent_with_scrollview_Infocus" />
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageButton android:id="@id/shutdown_button" android:background="@drawable/infocus_wear_batteryprotect_poweroff_button" style="@style/WearLayout_OneImageButtonMiddleStyle_Infocus" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>